{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./types",
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "strict": true,
        "target": "ES2017"
